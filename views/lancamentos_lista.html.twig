{% extends "layout.html.twig" %}

{% block title %}Lançamentos Financeiros{% endblock %}

{% block stylesheets %}
<style>
    /* Ajustes Gerais do DataTables */
    .dataTables_wrapper {
        font-size: 0.875rem; /* Reduz a fonte base de todo o componente (14px) */
    }

    /* Reduz a fonte específica das células e cabeçalho da tabela */
    #tabelaFornecedores th, 
    #tabelaFornecedores td {
        font-size: 0.875rem; 
        padding: 0.5rem 0.75rem; /* Reduz um pouco o espaçamento interno (padding) */
    }
    /* Ajustes finos para o DataTables */
    .dataTables_wrapper .page-link {
        padding: 0.3rem 0.75rem;
        font-size: 0.9rem;
    }
    .dataTables_wrapper .dataTables_info {
        padding-top: 0.8rem;
        font-size: 0.9rem;
        color: #6c757d;
    }
</style>
{% endblock %}

{% block content %}
    {# --- ÁREA DE RESUMO (NOVO) --- #}
    <div class="row mb-4 g-3">
        {# Card Receitas #}
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Total Receitas</h6>
                            <h3 class="text-success fw-bold mb-0">R$ {{ total_receitas|number_format(2, ',', '.') }}</h3>
                        </div>
                        <div class="fs-1 text-success opacity-25">
                            <i class="fa-solid fa-arrow-trend-up"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Card Despesas #}
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm border-start border-4 border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Total Despesas</h6>
                            <h3 class="text-danger fw-bold mb-0">R$ {{ total_despesas|number_format(2, ',', '.') }}</h3>
                        </div>
                        <div class="fs-1 text-danger opacity-25">
                            <i class="fa-solid fa-arrow-trend-down"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Card Saldo #}
        <div class="col-12 col-md-4">
            {% set cor_saldo = saldo_total >= 0 ? 'text-primary' : 'text-danger' %}
            {% set borda_saldo = saldo_total >= 0 ? 'border-primary' : 'border-danger' %}
            {% set icone_saldo = saldo_total >= 0 ? 'fa-wallet' : 'fa-circle-exclamation' %}
            
            <div class="card border-0 shadow-sm border-start border-4 {{ borda_saldo }}">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Saldo Total</h6>
                            <h3 class="{{ cor_saldo }} fw-bold mb-0">R$ {{ saldo_total|number_format(2, ',', '.') }}</h3>
                        </div>
                        <div class="fs-1 {{ cor_saldo }} opacity-25">
                            <i class="fa-solid {{ icone_saldo }}"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# --- FIM DO RESUMO --- #}
    
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h1>Lançamentos</h1>
        <a href="/lancamentos/cadastrar" class="btn btn-success btn-sm">
            Cadastrar Lançamento
        </a>
    </div>

    {# Mensagens Flash #}
    {% if session_has('success') %}
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fa-solid fa-check-circle me-2"></i> {{ session_get('success') }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    {% if session_has('errors') %}
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <ul class="mb-0 ps-3">
                {% for erro in session_get('errors') %}
                    <li>{{ erro }}</li>
                {% endfor %}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-4">
            {% if lancamentos is empty %}
                <div class="text-center text-muted py-5">
                    <i class="fa-solid fa-money-bill-transfer fa-3x mb-3 opacity-25"></i>
                    <p>Nenhum lançamento encontrado.</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table id="tabelaLancamentos" class="table table-hover align-middle w-100">
                        <thead class="table-light">
                            <tr>
                                <th>Descrição</th>
                                <th>Fornecedor</th>
                                <th class="text-end">Valor</th>
                                <th class="text-center">Vencimento</th>
                                <th class="text-end">Valor Pago</th>
                                <th class="text-center">Data Pagto</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Forma Pagamento</th>
                                {# <th class="text-center">total</th> #}
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for lancamento in lancamentos %}
                                <tr>
                                    <td>
                                        <span class="fw-medium">{{ lancamento.descricao }}</span>
                                        {% if lancamento.total_parcelas %}
                                            <span class="badge bg-light text-secondary border ms-1" style="font-size: 0.7em;">
                                                {{ lancamento.parcela_atual }}/{{ lancamento.total_parcelas }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fa-regular fa-building me-2 text-muted"></i>
                                            {{ lancamento.fornecedor.nome ?? '<span class="text-muted small">N/A</span>'|raw }}
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold {{ lancamento.tipo == 'receita' ? 'text-success' : 'text-danger' }}">
                                        R$ {{ lancamento.valor | number_format(2, ',', '.') }}
                                    </td>
                                    <td class="text-center">
                                        {{ lancamento.data_vencimento | date('d/m/Y') }}
                                    </td>
                                    <td class="text-end text-muted">
                                        {% if lancamento.valor_pago %}
                                            R$ {{ lancamento.valor_pago | number_format(2, ',', '.') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td class="text-center text-muted">
                                        {% if lancamento.data_pagamento %}
                                            {{ lancamento.data_pagamento | date('d/m/Y') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% if lancamento.status == 'pago' %}
                                            <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                                                <i class="fa-solid fa-check me-1"></i>Pago
                                            </span>
                                        {% else %}
                                            <span class="badge bg-warning-subtle text-warning border border-warning-subtle rounded-pill">
                                                <i class="fa-regular fa-clock me-1"></i>Pendente
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center small text-muted">
                                        {{ lancamento.forma_pagamento ?? '-' }}
                                    </td>
                                    {# <td class="text-center small text-muted">
                                        {% set total = total + lancamento.valor %}
                                    </td> #}
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="/lancamentos/editar/{{ lancamento.id }}" class="btn btn-outline-primary btn-sm" title="Editar">
                                                <i class="fa-regular fa-pen-to-square"></i>
                                            </a>
                                            
                                            <form action="/lancamentos/excluir/{{ lancamento.id }}" method="POST">
                                                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                                                <button type="submit" onclick="return confirm('Tem certeza que deseja excluir?');" class="btn btn-outline-danger btn-sm" title="Excluir">
                                                    <i class="fa-regular fa-trash-can"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="card shadow-sm border-0 rounded-3">
        <span>{{ total }}</span>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function() {
        $('#tabelaLancamentos').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
            },
            // 1. DEFINIÇÃO DAS OPÇÕES
            lengthMenu: [ [10, 15, 20, 100, -1], [10, 15, 20, 100, "Todos"] ],
            
            // 2. QUANTIDADE PADRÃO
            pageLength: 20,

            // 3. LAYOUT (DOM)
            // B = Botões
            // l = Length (O select de quantidade) <--- ADICIONADO
            // f = Filter (Busca)
            // Agrupei 'l' e 'f' numa div para ficarem juntos na direita
            //dom: '<"d-flex justify-content-between align-items-center mb-3"B<"dt-search-length"lf>>rt<"d-flex justify-content-between align-items-center mt-3"ip>',
            dom: '<"d-flex justify-content-between align-items-center mb-3"Bf>rt<"d-flex justify-content-between align-items-center mt-3"ip>',
            buttons: [
                { extend: 'excelHtml5', text: '<i class="fa-solid fa-file-excel me-1"></i>', className: 'btn btn-success btn-sm' },
                { extend: 'pdfHtml5', text: '<i class="fa-solid fa-file-pdf me-1"></i>', className: 'btn btn-danger btn-sm' },
                { extend: 'print', text: '<i class="fa-solid fa-print me-1"></i>', className: 'btn btn-secondary btn-sm' }
            ],
            order: [[ 3, "desc" ]], // Ordenar por Vencimento (coluna index 3)
            pageLength: 20,
            responsive: true
        });
    });
</script>
{% endblock %}
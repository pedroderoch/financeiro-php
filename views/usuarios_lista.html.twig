{% extends "layout.html.twig" %}

{% block title %}Lista de Usuários{% endblock %}

{% block stylesheets %}
<style>
    /* Ajustes finos para o DataTables */
    .dataTables_wrapper .page-link {
        padding: 0.3rem 0.75rem;
        font-size: 0.9rem;
    }
    .dataTables_wrapper .dataTables_info {
        padding-top: 0.8rem;
        font-size: 0.9rem;
        color: #6c757d;
    }
</style>
{% endblock %}

{% block content %}
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h1>Usuários</h1>
        <a href="/usuarios/cadastrar" class="btn btn-success btn-sm">
            Cadastrar Usuário
        </a>
    </div>

    {# Mensagens Flash #}
    {% if session_has('success') %}
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fa-solid fa-check-circle me-2"></i> {{ session_get('success') }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    {% if session_has('errors') %}
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <ul class="mb-0 ps-3">
                {% for erro in session_get('errors') %}
                    <li>{{ erro }}</li>
                {% endfor %}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-4">
            {% if usuarios is empty %}
                <div class="text-center text-muted py-5">
                    <i class="fa-regular fa-user fa-3x mb-3 opacity-25"></i>
                    <p>Nenhum usuário encontrado.</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table id="tabelaUsuarios" class="table table-hover align-middle w-100">
                        <thead class="table-light">
                            <tr>
                                <th class="text-center" width="5%">ID</th>
                                <th>Nome</th>
                                <th>Usuário</th>
                                <th>E-mail</th>
                                <th class="text-center">Nível</th>
                                <th class="text-end" width="100px">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for usuario in usuarios %}
                                <tr>
                                    <td class="text-center text-muted">#{{ usuario.id }}</td>
                                    <td class="fw-medium">{{ usuario.nome }}</td>
                                    <td>{{ usuario.usuario }}</td>
                                    <td class="text-muted small">{{ usuario.email }}</td>
                                    <td class="text-center">
                                        {% if usuario.nivel == 'admin' %}
                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">Admin</span>
                                        {% else %}
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">Usuário</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="/usuarios/editar/{{ usuario.id }}" class="btn btn-outline-primary btn-sm" title="Editar">
                                                <i class="fa-regular fa-pen-to-square"></i>
                                            </a>
                                            
                                            <form action="/usuarios/excluir/{{ usuario.id }}" method="POST">
                                                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                                                <button type="submit" onclick="return confirm('Tem certeza que deseja excluir {{ usuario.nome }}?');" class="btn btn-outline-danger btn-sm" title="Excluir">
                                                    <i class="fa-regular fa-trash-can"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function() {
        $('#tabelaUsuarios').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
            },
            dom: '<"d-flex justify-content-between align-items-center mb-3"Bf>rt<"d-flex justify-content-between align-items-center mt-3"ip>',
            buttons: [
                { extend: 'excelHtml5', text: '<i class="fa-solid fa-file-excel me-1"></i>', className: 'btn btn-success btn-sm' },
                { extend: 'pdfHtml5', text: '<i class="fa-solid fa-file-pdf me-1"></i>', className: 'btn btn-danger btn-sm' },
                { extend: 'print', text: '<i class="fa-solid fa-print me-1"></i>', className: 'btn btn-secondary btn-sm' }
            ],
            order: [[ 1, "asc" ]], // Ordenar por Nome
            pageLength: 10,
            responsive: true
        });
    });
</script>
{% endblock %}